<label for="form_{{item}}">{{field.label}}</label>
<select name="{{item}}" id="form_{{item}}">
  {% for r in field.choices -%}
    <option value="{{r.value}}"
      {%- if value and r.value == value %} selected{% endif -%}
      {%- if r.disabled %} disabled{% endif -%}
    >{{r.label}}</option>
  {% endfor -%}
</select>