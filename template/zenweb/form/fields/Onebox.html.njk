{%- set __v = '' if value === undefined else value|string -%}
<div class="form-check">
  <input class="form-check-input" type="checkbox" name="{{name}}" id="form_{{name}}" value="{{field.value}}"
    {%- if __v == field.value|string %} checked{% endif -%}
  />
  <label class="form-check-label" for="form_{{name}}">{{field.label or name}}</label>
</div>