{% include './label.inc.html.njk' %}
<div>
  {% for r in field.choices -%}
    <input type="checkbox" name="{{item}}" id="form_{{item}}_{{loop.index}}" value="{{r.value}}"
      {%- if value and value.includes(r.value|string) %} checked {% endif -%}
    />
    <label for="form_{{item}}_{{loop.index}}">{{r.label}}</label>
  {% endfor -%}
</div>